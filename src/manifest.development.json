{
    "manifest_version": 3,
    "name": "call-for-code-2022",
    "description": "chrome extension",
    "version": "0.0.1",
    "permissions": [
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "/background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/content.js"
            ]
        }
    ],
    "options_page": "options.html"
}
